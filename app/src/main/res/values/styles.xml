<resources>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <!-- Main activity theme. -->
    <style name="ActivityBarTheme" parent="AppTheme">
        <item name="actionBarStyle">@style/ActionBar.Solid.Football.Title</item>
    </style>



    <!-- main activity action bar styles -->
    <style name="ActionBar.Solid.Football.Title"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="displayOptions">showHome|useLogo</item>
        <item name="logo">@drawable/ic_launcher</item>

        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>
    <!-- ActionBar title text -->
    <style name="MyActionBarTitleText"
           parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/green01</item>
    </style>

</resources>
